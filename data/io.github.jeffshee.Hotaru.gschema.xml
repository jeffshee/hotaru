<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="hotaru">
	<schema id="io.github.jeffshee.Hotaru" path="/io/github/jeffshee/Hotaru/">
		<!-- Audio -->
		<key name="mute" type="b">
			<default>false</default>
			<summary>Mute audio</summary>
			<description>Mute audio during wallpaper playback</description>
		</key>
		<key name="volume" type="i">
			<default>50</default>
			<range min="0" max="100"/>
			<summary>Volume level</summary>
			<description>Audio volume level (0-100)</description>
		</key>

		<!-- Display -->
		<key name="content-fit" type="i">
			<default>1</default>
			<range min="0" max="3"/>
			<summary>Content fit mode</summary>
			<description>How the wallpaper fits in the window (0: Fill, 1: Contain, 2: Cover, 3: Scale-down)</description>
		</key>

		<key name="use-clapper" type="b">
			<default>true</default>
			<summary>Use Clapper</summary>
			<description>Use Clapper for video playback. When disabled, GStreamer is used instead.</description>
		</key>
		<key name="enable-graphics-offload" type="b">
			<default>false</default>
			<summary>Enable graphics offload</summary>
			<description>Enable graphics offload (requires GTK 4.14+)</description>
		</key>

		<!-- Last applied wallpaper (for auto-restore on daemon startup) -->
		<key name="last-wallpaper-config" type="s">
			<default>''</default>
			<summary>Last wallpaper config</summary>
			<description>JSON config of the last applied wallpaper, used to restore on daemon startup</description>
		</key>
		<key name="last-launch-mode" type="s">
			<default>''</default>
			<summary>Last launch mode</summary>
			<description>Launch mode of the last applied wallpaper (e.g. x11-desktop, gnome-ext-hanabi)</description>
		</key>
	</schema>
</schemalist>
