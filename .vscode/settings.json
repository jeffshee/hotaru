{
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        ".flatpak/**": true,
        "_build/**": true
    },
    "rust-analyzer.files.excludeDirs": [
        ".flatpak",
        ".flatpak-builder",
        "_build",
        "build",
        "builddir"
    ],
    "mesonbuild.configureOnOpen": false,
    "mesonbuild.buildFolder": "_build",
    "mesonbuild.mesonPath": "${workspaceFolder}/.flatpak/meson.sh"
}