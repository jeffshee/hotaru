{
    "id" : "io.github.jeffshee.Hotaru",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "version": "24.08",
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "no-autodownload": false,
            "autodelete": false
        }
    },
    "command" : "hotaru",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--env=GST_PLUGIN_SYSTEM_PATH=/app/lib/gstreamer-1.0"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "hotaru=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "gstreamer.json",
        "clapper.json",
        "gst-plugin-gtk4.json",
        {
            "name" : "hotaru",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ],
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ]
}
